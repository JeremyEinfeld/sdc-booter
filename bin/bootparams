#!/usr/bin/env node

var Mapi = require('../lib/mapi').Mapi;

var mac = process.argv[2];
var opt = process.argv[3];
if (!mac) {
  console.log("Usage: " + process.argv[1] + " <mac_addr> [-v]");
  process.exit(1);
}

var mapi = new Mapi();
mapi.logging = false;

if (opt && opt == '-v') {
    mapi.logging = true;
}

mapi.getBootParams(mac, function(params, err) {
  if (err) {
    console.log(err);
  } else {
    console.log(params);
  }
});
