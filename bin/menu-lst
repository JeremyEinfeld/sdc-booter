#!/usr/bin/env node

var Mapi = require('../mapi').Mapi;

var mac = process.argv[2];
var opt = process.argv[3];
if (!mac) {
  console.log("Usage: " + process.argv[1] + " <mac_addr> [-v]");
  process.exit(1);
}

var mapi = new Mapi();
mapi.log = false;

if (opt && opt == '-v') {
    mapi.log = true;
}

mapi.getBootParams(mac, function(params, err) {
  if (err) {
    console.log(err);
  } else {
    console.log(mapi.buildMenuLst(mac, params));
  }
});
